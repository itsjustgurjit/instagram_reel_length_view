{
  "manifest_version": 3,
  "name": "Instagram Video Length Viewer",
  "version": "1.0",
  "description": "Shows the duration of Instagram videos.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
